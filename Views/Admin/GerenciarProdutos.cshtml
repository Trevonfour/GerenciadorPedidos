@{
    Layout = "_Layout";
    ViewData["Title"] = "Admin";
}

<div class="text-center">
    <h1 class="display-4">Bem-vindo, Aqui você tem acesso administrador!</h1>
</div>

<div class="p-5">
    <div class="border border-light border-3 rounded">
        <div class="container">
            <div class="p-5">
                <div class="row">
                    <div class="col-8">
                        <h6>Produtos</h6>
                    </div>
                    <div class="col-4">
                        <button id="novoProduto"class="btn btn-sm btn-outline-success">Novo Produto</button>
                    </div>
                </div>
                <hr />
                <div class="p-5 rounded shadow-sm" id="divTabelaProdutos">
                </div>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-secondary" href="/Admin">Menu anterior</a>

<div id="modalProduto" class="modal fade" role="dialog">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title"></h6>
            </div>

            <div class="modal-body">
                <input type="hidden" class="form-control form-control-sm produtoId" />
                <div class="form-group">
                    <label>Nome</label>
                    <input type="text" class="form-control form-control-sm nome"/>
                    <span class="text-danger erroProduto d-none"></span>
                </div>

                <div class="form-group">
                    <label>Descrição</label>
                    <input type="text" class="form-control form-control-sm descricao" />
                    <span class="text-danger erroDescrição d-none">Digite o Descrição</span>
                </div>

                <div class="form-group">
                    <label>Preço</label>
                    <input type="text" class="form-control form-control-sm preco"/>
                    <span class="text-danger erroPreco d-none">Digite um preço válido (Ex: 1234.56)</span>
                </div>
            <div class="modal-footer">
                <div class="form-group">
                    <input type="button" value="Salvar" class="btn btn-sm btn-outline-success btnSalvar" />
                    <input type="button" value="Cancelar" class="btn btn-sm btn-light" data-bs-dismiss="modal" />
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
<script src="~/js/admin.js" asp-append-version="true"></script>


